<!doctype html>
<html>
<head>
    <title>Calculator</title>
    <style>

        .button {
            border-style: groove;
            table-layout:fixed;
            width: 65px;
            height: 65px;
            float: left;
            text-align: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            background-color:  beige;
        }

        .result {
            font-size: x-large;
            width: 387px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: flex-end
        }
    </style>
    <script>

        function Number(num) {
            document.getElementById("result").innerHTML += num
            

        }
        function Hesapla() {
            var par1 = document.getElementById("result").innerHTML;      
            var result = eval(par1);

            document.getElementById("result").innerHTML = result;
        }
        function clr() {
            document.getElementById("result").innerHTML = ""
        }
        function sqrt() {
            var par1 = document.getElementById("result").innerHTML;          
            var result = Math.sqrt(par1);
            document.getElementById("result").innerHTML = result;
        }
        function secondPow() {
            var par1 = document.getElementById("result").innerHTML;
            var result = Math.pow(par1,2);
            document.getElementById("result").innerHTML = result;
        }
        function thirdPow() {
            var par1 = document.getElementById("result").innerHTML;
            var result = Math.pow(par1, 3);
            document.getElementById("result").innerHTML = result;
        }
        function oneDivide() {
            var par1 = document.getElementById("result").innerHTML;
            var result = eval(1 / par1);
            document.getElementById("result").innerHTML = result;
        }
        function opposite() {
            var par1 = document.getElementById("result").innerHTML;
            var result = eval(-1 * par1);
            document.getElementById("result").innerHTML = result;
        }     
        function dot() {
            var par1 = document.getElementById("result").innerHTML;
            var result = par1 + ".";
            document.getElementById("result").innerHTML = result;
        }
     

    </script>
</head>
<body>
    <div style="width:390px;height:315px; border-style:groove;">
        <div style="width:388px;height:50px; border-style:groove;"><div id="result" class="result"></div></div>

        <div style="width:100%" ;height:200px;>


            <input type="button" value="√" onclick="sqrt()" class="button" />
            <input type="button" value="1" onclick="Number('1');" class="button" />
            <input type="button" value="2" onclick="Number('2');" class="button" />
            <input type="button" value="3" onclick="Number('3');" class="button" />
            <input type="button" value="+" onclick="Number('+');" class="button" />
            <input type="button" value="+-" onclick="opposite();" class="button" />
            <div style="clear:both;"></div>
            <input type="button" value="x²" onclick="secondPow()" class="button" />
            <input type="button" value="4" onclick="Number('4');" class="button" />
            <input type="button" value="5" onclick="Number('5');" class="button" />
            <input type="button" value="6" onclick="Number('6');" class="button" />
            <input type="button" value="-" onclick="Number('-');" class="button" />
            <input type="button" value="." onclick="dot();" class="button" />
            <div style="clear:both;"></div>
            <input type="button" value="x³" onclick="thirdPow();" class="button" />
            <input type="button" value="7" onclick="Number('7');" class="button" />
            <input type="button" value="8" onclick="Number('8');" class="button" />
            <input type="button" value="9" onclick="Number('9');" class="button" />
            <input type="button" value="*" onclick="Number('*');" class="button" />

            <div style="clear:both;"></div>
            <input type="button" value="⅟ₓ" onclick="oneDivide();" class="button" />
            <input type="button" value="C" onclick="clr();" class="button" />
            <input type="button" value="0" onclick="Number('0');" class="button" />
            <input type="button" value="=" onclick="Hesapla();" class="button" />
            <input type="button" value="/" onclick="Number('/');" class="button" />



            <div style="clear:both;"></div>
        </div>
    </div>


</body>
</html>